<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners"
    android:padding="@dimen/space_2">

    <TextView
        android:id="@+id/venue_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_1"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toTopOf="@id/venue_address"
        app:layout_constraintEnd_toStartOf="@id/venue_distance"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Fancy venue name" />

    <TextView
        android:id="@+id/venue_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@id/venue_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/venue_name"
        app:layout_constraintTop_toTopOf="@id/venue_name"
        tools:text="4.6 km" />

    <TextView
        android:id="@+id/venue_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/venue_name"
        app:layout_constraintStart_toStartOf="@id/venue_name"
        app:layout_constraintTop_toBottomOf="@id/venue_name"
        tools:text="1234 AB" />

</androidx.constraintlayout.widget.ConstraintLayout>
